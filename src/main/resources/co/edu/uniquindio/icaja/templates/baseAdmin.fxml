<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Tooltip?>
<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/22"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.icaja.view.views.baseAdminView">
    <GridPane layoutX="45.0" layoutY="93.0" prefHeight="535.0" prefWidth="70.0">
        <columnConstraints>
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <Button mnemonicParsing="false" onAction="#irUsuarioAction" prefHeight="43.0" prefWidth="43.0">
            <graphic>
                <FontAwesomeIconView glyphName="USER" size="24" styleClass="icon" />
            </graphic>
            <tooltip>
                <Tooltip text="Este botón realiza una nueva transacción"/>
            </tooltip>
        </Button>
        <Button mnemonicParsing="false" onAction="#irCuentaAction" prefHeight="43.0" prefWidth="43.0" GridPane.rowIndex="1">
            <graphic>
                <FontAwesomeIconView glyphName="CREDIT_CARD" size="24" styleClass="icon" />
            </graphic>
        </Button>
        <Button mnemonicParsing="false" onAction="#irTransaccionAction" prefHeight="43.0" prefWidth="43.0" GridPane.rowIndex="2">
            <graphic>
                <FontAwesomeIconView glyphName="EXCHANGE" size="24" styleClass="icon" />
            </graphic>
        </Button>
        <Button mnemonicParsing="false" onAction="#irCategoriaAction" prefHeight="43.0" prefWidth="43.0" GridPane.rowIndex="3">
            <graphic>
                <FontAwesomeIconView glyphName="TAG" size="24" styleClass="icon" />
            </graphic>
        </Button>
        <Button mnemonicParsing="false" onAction="#VolverAction" prefHeight="43.0" prefWidth="43.0" GridPane.halignment="CENTER" GridPane.rowIndex="4">
            <graphic>
                <FontAwesomeIconView glyphName="SIGN_OUT" size="24" styleClass="icon" />
            </graphic>
        </Button>
    </GridPane>
    <AnchorPane fx:id="usuarioBox" layoutX="162.0" layoutY="47.0" prefHeight="626.0" prefWidth="1073.0">
        <fx:include source="admin/usuario.fxml"/>
    </AnchorPane>
    <AnchorPane fx:id="cuentaBancariaBox" layoutX="162.0" layoutY="47.0" prefHeight="626.0" prefWidth="1073.0"
                visible="false">
        <fx:include source="admin/cuenta.fxml"/>
    </AnchorPane>
    <AnchorPane fx:id="transaccionBox" layoutX="162.0" layoutY="47.0" prefHeight="626.0" prefWidth="1073.0"
                visible="false">
        <fx:include source="admin/transaccion.fxml"/>
    </AnchorPane>
    <AnchorPane fx:id="categoriaBox" layoutX="162.0" layoutY="47.0" prefHeight="626.0" prefWidth="1073.0"
                visible="false">
        <fx:include source="admin/categoria.fxml"/>
    </AnchorPane>
</AnchorPane>
